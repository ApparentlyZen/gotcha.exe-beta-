-- ========== GUI PARENT ==========
local guiParent = nil

pcall(function()
    local CoreGui = game:GetService("CoreGui")
    if CoreGui:FindFirstChild("ZenMenu") then
        CoreGui:FindFirstChild("ZenMenu"):Destroy()
    end
    guiParent = CoreGui
    print("‚úÖ GUI Parent: CoreGui")
end)

if not guiParent and gethui then
    pcall(function()
        guiParent = gethui()
        print("‚úÖ GUI Parent: gethui()")
    end)
end

if not guiParent then
    local playerGui = player:WaitForChild("PlayerGui", 5)
    if playerGui then
        if playerGui:FindFirstChild("ZenMenu") then
            playerGui:FindFirstChild("ZenMenu"):Destroy()
        end
        guiParent = playerGui
        print("‚úÖ GUI Parent: PlayerGui")
    end
end

if not guiParent then
    warn("‚ùå ERREUR: Impossible de cr√©er le GUI")
    return
end

